extends layout

block content
  h1= title
  p Welcome to #{title}
  form(action='login', method='POST')
    div
      label(for='username') Username:
      input#username(type='text', name='username')
    div
      label(for='password') Password:
      input#password(type='password', name='password')
    div
      input(type='submit', value='Log In')
