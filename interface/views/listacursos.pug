extends layout

block content
	.w3-container.w3-content
	.w3-card-4
		header.w3-indigo
			h2.w3-margin-left(style="display: inline")=titulo
			input#searchListaCursos.w3-right.w3-margin(type="text", onkeyup="searchTable('searchListaCursos','listaCursos')", placeholder="Pesquisar", title="Inserir nome ou tag")
		.w3-container
			table#listaCursos.w3-table.w3-bordered
				tr
					th Nome
					th Descrição
					th Visibilidade
					th Inscrito
				each curso in cursos
					tr
						td 
							a(href=`/cursos/${curso._id}`)
								b= curso.nome
						td= curso.descricao
						td 
							if curso.visibilidade == 'privado'
								i.w3-xlarge.fa.fa-lock
							else
								i.w3-xlarge.fa.fa-unlock 
						td
							if curso.isInscrito
								i.w3-green.w3-xlarge.fa.fa-check
							else
								i.w3-red.w3-xlarge.fa.fa-times
		footer.w3-indigo
			address Generated in RPCW :: #{data}