extends layout

block content
    .w3-container.w3-content
    .w3-card-4
        header.w3-indigo
            h2.w3-margin-left Notificações
        .w3-container
            each notificacao in notificacoes
                if notificacao.lida 
                    .w3-container
                        .w3-panel.w3-light-green.w3-bottombar.w3-border-green.w3-border.w3-display-container 
                            p   
                                b Descrição: 
                                | #{notificacao.descricao}
                            p 
                                b Lida: 
                                i.w3-red.w3-xlarge.fa.fa-check
                            if notificacao.link
                                p.w3-center
                                    a.w3-button.w3-grey.w3-round(href=notificacao.link) Mostrar
                else 
                    .w3-container
                        .w3-panel.w3-light-red.w3-bottombar.w3-border-red.w3-border.w3-display-container 
                            p   
                                b Descrição: 
                                | #{notificacao.descricao}
                            p 
                                b Lida: 
                                i.w3-red.w3-xlarge.fa.fa-times
                            if notificacao.link
                                p.w3-center
                                    a.w3-button.w3-grey.w3-round(href=notificacao.link) Mostrar 
                    