extends layout

block content
	.modal(id="display")
	.w3-card-4
		header.w3-indigo
			h2 File List #[a.w3-button.w3-amber.w3-round(href="/files/upload") +]
		.w3-container
			table.w3-table.w3-bordered
				tr
					th Date
					th File
					th Size
					th Type
					th Description
				each file in files
					//tr(onclick=`showFile('${file._id}','${file.mimetype}')`)
					tr(onclick=`window.location='/files/${file._id}';`)
						td= file.date.toISOString().slice(0,16)
						td= file.name
						td= file.size
						td= file.mimetype
						td= file.description
						td 
		footer.w3-indigo
			address Generated in RPCW :: #{date}