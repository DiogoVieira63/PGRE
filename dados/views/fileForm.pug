extends layout

block content
    .w3-card-4    
        header.w3-indigo
            h2 File Upload
        form.w3-container(action="/files" method="POST" enctype="multipart/form-data")
            fieldset 
                legend Metadata
                label.w3-text-indigo
                    b Select File
                input.w3-input.w3-border.w3-light-grey(type="file" name="file")
                label.w3-text-indigo
                    b Description
                input.w3-input.w3-border.w3-light-grey(type="text" name="description")
            input.w3-btn.w3-blue-grey(type="submit" value="Send")
        footer.w3-indigo
            address Generated in RPCW :: #{date}